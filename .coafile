[default]
bears = FilenameBear
files = **.rb, **.md, **.yml
ignore =

[markdown]
bears = MarkdownBear, LineLengthBear
files = **.md
language = markdown
max_line_length = 80
ignore_length_regex = .*(https?:\/\/) # ignore long link
markdown_strong = *
markdown_emphasis = _

[ruby]
bears = RubySyntaxBear, RuboCopBear
files = **.rb
language = ruby

[yaml]
bears = YAMLLintBear
files = **.yml
language = yaml
